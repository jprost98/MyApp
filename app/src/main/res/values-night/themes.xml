<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MyApp" parent="Theme.AppCompat.DayNight">
        <item name="android:fontFamily">sans-serif</item>
        <item name="titleTextColor">@color/white</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="DefaultTheme">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
    </style>

    <style name="RedTheme">
        <item name="colorPrimary">@color/red_primary_dt</item>
        <item name="colorPrimaryDark">@color/red_primary_dark_dt</item>
        <item name="colorAccent">@color/red_accent_dt</item>
    </style>

    <style name="BlueTheme">
        <item name="colorPrimary">@color/blue_primary_dt</item>
        <item name="colorPrimaryDark">@color/blue_primary_dark_dt</item>
        <item name="colorAccent">@color/blue_accent_dt</item>
    </style>

    <style name="GreenTheme">
        <item name="colorPrimary">@color/green_primary_dt</item>
        <item name="colorPrimaryDark">@color/green_primary_dark_dt</item>
        <item name="colorAccent">@color/green_accent_dt</item>
    </style>

    <style name="GreyscaleTheme">
        <item name="colorPrimary">@color/greyscale_primary_dt</item>
        <item name="colorPrimaryDark">@color/greyscale_primary_dark_dt</item>
        <item name="colorAccent">@color/greyscale_accent_dt</item>
    </style>

    <style name="ButtonTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:buttonStyle" tools:targetApi="p">@android:style/Widget.DeviceDefault.Button.Colored</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogAnim">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
</resources>